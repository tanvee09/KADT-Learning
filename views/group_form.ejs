<%- include("header") -%>
<link rel ="stylesheet" href="../css/index.css">
    <% if(locals.messages) { %>
        <% if (messages.error) { %>
            <p style="text-align: center; color: red;"><%= messages.error %></p>
        <% } else if (messages.success_msg) { %>
            <p style="text-align: center; color: green;"><%= message.error %></p>
        <% } %>
    <% } %>
    <div class="container" style="margin-top: 3%; margin-bottom: 3%;">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-6 col-lg-6" style="background-color: white">
                <form action="<%= "/group/"+type %>" method="POST" style="margin-bottom: 2%;">
                    <div class="form-group">
                        <label>Group Name</label>
                        <input class="form-control" placeholder="Enter group name" name="groupname">
                        <small class="form-text text-muted">Share this group name with other students for them to join</small>
                    </div>
                    <button type="submit" class="btn btn-primary">
                    <% if (type=="new") { %>
                        Create Group
                    <% } else if (type== "join") { %>
                        Join Group
                    <% } %>
                    </button>
                </form>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-6">
                <img src="../images/login.jfif" style="width: 100%;">
            </div>
        </div>
    </div>
<%- include("footer") -%>